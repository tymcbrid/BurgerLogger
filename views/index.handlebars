
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>(Burger Pic Here)</h1>
                <h1>Eat-Da-Burger!</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <ul class="list-group"> 
                {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
                </ul>
            </div>
            <div class="col-sm-6">
                <ul class="list-group">
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label for="inputNewBurger"></label>
                    <textarea class="form-control" id="newBurger" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mb-2" id="submitNew">Submit</button>
                <p>Enter a burger that you want to eat and click the "Submit" button.</p>
            </div>
        </div>
    </div>
</div>



