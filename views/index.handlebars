
<div class="wrapper">
    <div class="container">
        <div class="row">
                <img src="/assets/img/bacon-burger.png" alt="Bacon Burger" id="burgerPic" width="250" height="250">
        </div>
        <div class="row"><h1  id="eatText">Eat-Da-Burger!</h1></div>
        <div class="row">
          <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <ul class="list-group"> 
                {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
                </ul>
            </div>
            <div class="col-sm-4">
                <ul class="list-group">
                {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
          <div class="col-sm-2"></div>
           <div class="col-sm-8">
          <div class="form-group">
              <label for="inputNewBurger"></label>
              <textarea class="form-control" id="newBurger" rows="3"></textarea>
          </div>
           </div>
        </div>
        <div class="row"  id="submitNew">
          <div class="col-sm-2"></div>
          <div class="col-sm-2">
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
          </div>
        </div>
        <div class="row"  id="submitNew">
          <div class="col-sm-3"></div>
          <div class="col-sm-8">          <p>Enter a burger that you want to eat and click the "Submit" button.</p></div>
        </div>   
    </div>
</div>



